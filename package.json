  "dependencies": {
    "chalk": "4.1.2",
    "cli-spinner": "^0.2.10",
    "figures": "3.2.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/cli-spinner": "^0.2.1",
    "prettier": "^2.5.1",
    "yarn": "^1.22.17"
  }
